<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="dist" name="wonderland-modules"> 
    <!-- jar all subprojects -->
    <target name="package">
        <ant antfile="foundation/build.xml" target="package" inheritall="false"/>
        <ant antfile="samples/build.xml" target="package" inheritall="false"/>
        <ant antfile="tools/build.xml" target="package" inheritall="false"/>
        <ant antfile="world/build.xml" target="package" inheritall="false"/>
    </target>
    
    <!-- copy sub-project jar files to dist directory -->
    <target name="dist" depends="package">
        <!-- create dist directory -->
        <mkdir dir="dist"/>
       
        <!-- copy all modules -->
        <copy todir="dist">
            <fileset dir=".">
                <include name="**/dist/*.jar"/>
                <exclude name="/dist/**"/>
            </fileset>
            <mapper type="flatten"/>
        </copy>
    </target>
    
    <!-- clean all sub-projects -->
    <target name="clean">
        <!-- delete dist directory -->
        <delete dir="dist" failonerror="false"/>
        
        <!-- clean sub-projects -->
        <ant antfile="foundation/build.xml" target="clean" inheritall="false"/> 
        <ant antfile="samples/build.xml" target="clean" inheritall="false"/>
        <ant antfile="tools/build.xml" target="clean" inheritall="false"/> 
        <ant antfile="world/build.xml" target="clean" inheritall="false"/> 
    </target>
</project>
