<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="wonderland-webserver-IDE">
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#runsingle) -->
    <target name="run-selected-file-in-classes">
        <fail unless="run.class">Must set property 'run.class'</fail>
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath>
                <pathelement path="lib/gf-embedded-api-1.0-alpha-5-SNAPSHOT-with-full-v3.jar"/>
                <pathelement path="${build.classes.dir}"/>
            </classpath>
        </java>
    </target>
    
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#compilesingle) -->
    <target name="compile-selected-files-in-classes">
        <fail unless="files">Must set property 'files'</fail>
        <!-- TODO decide on and define some value for ${build.classes.dir} -->
        <mkdir dir="${build.classes.dir}"/>
        <javac destdir="${build.classes.dir}" includes="${files}" source="1.5" srcdir="src/classes">
            <classpath path="lib/gf-embedded-api-1.0-alpha-5-SNAPSHOT-with-full-v3.jar"/>
        </javac>
    </target>
</project>
