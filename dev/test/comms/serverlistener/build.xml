<?xml version="1.0" encoding="UTF-8"?>
<project name="wonderland-serverprotocoltest" default="all" basedir=".">
    <property name="top.dir" location="../../.."/>
    <property name="current.dir" location="."/>
    <property name="test.import.dir" location="${top.dir}/test/build-tools/import"/>
        
    <property name="servertest.src" value="org/jdesktop/wonderland/serverlistenertest"/>
    <property name="servertest.packagename" value="org.jdesktop.wonderland.serverlistenertest"/>
    <property name="servertest.jarname" value="serverlistenertest"/>
    <property name="servertest.plugins" value="TestListenerPlugin"/>
    
    <import file="${test.import.dir}/servertest-common.xml"/>
    
    <target name="build" depends="init, compile-common, compile-server, compile-client"/>
    <target name="jar" depends="build, jar-server, jar-client"/>
    <target name="run-client" depends="-do-run-client"/>
    <target name="run-server" depends="-do-run-server"/>
    <target name="clean" depends="-do-clean"/>
</project>
