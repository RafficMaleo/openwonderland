<?xml version="1.0" encoding="UTF-8"?>
<project name="testcells" default="package" basedir=".">
    <!-- current directory needed in all scripts -->
    <dirname property="current.dir" file="${ant.file.testcells}"/>
    <property name="modules.dir" location="${current.dir}/../.."/>
        
    <property name="module.src" value="org/jdesktop/wonderland/modules/testcells"/>
    <property name="module.packagename" value="org.jdesktop.wonderland.modules.testcells"/>
    <property name="module.jarname" value="testcells"/>
    
    <!-- import common build file -->
    <import file="${modules.dir}/build-tools/build-scripts/module-build.xml"/>
       
    <target name="build" depends="-module-init, -module-compile-common, 
                                                -module-compile-server,
                                                -module-compile-client"/>
    <target name="dist" depends="build">
        <mkdir dir="${module.dist.dir}"/>
        
        <module name="testcells" version="1" jarfile="${module.dist.dir}/${module.jarname}.jar"
                builddir="${build.dir}">
                    
           <client>
                <clientjar name="testcells-client" basedir="${build.classes.dir}">
<!--
                    <service type="org.jdesktop.wonderland.common.cell.setup.spi.CellSetupSPI">
                        <provider classname="org.jdesktop.wonderland.modules.testcells.common.cell.setup.JMEColladaCellSetup"/>
                        <provider classname="org.jdesktop.wonderland.modules.testcells.common.cell.setup.StaticModelCellSetup"/>
                    </service> 
-->

                    <include name="${module.src}/client/**"/>
                    <include name="${module.src}/common/**"/>
                </clientjar> 
            </client>
            
            <server>
                <serverjar name="testcells-server" basedir="${build.classes.dir}">
                    <serverplugin provider="org.jdesktop.wonderland.modules.testcells.server.cell.TestWorld"/>
                    <!--<serverplugin provider="org.jdesktop.wonderland.modules.testcells.server.cell.PhysicsWorld"/>-->
                    <!--<cellsetup>
                        <provider classname="org.jdesktop.wonderland.modules.testcells.client.LoaderFactory"/>
                    </cellsetup>-->
                    
                    <include name="${module.src}/server/**"/>
                    <include name="${module.src}/common/**"/>
                </serverjar>
            </server>
            
            <art dir="${current.dir}/art"/>
        </module>
    </target>                                                       
                                           
    <target name="deploy" depends="dist, -module-deploy"/>
    <target name="clean" depends="-module-clean"/>
</project>
